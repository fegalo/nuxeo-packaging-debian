#!/usr/bin/make -f

export DH_VERBOSE=1

build: build-stamp

build-stamp:
	dh_testdir
	touch build-stamp

clean:
	dh_testdir
	dh_testroot

	rm -f build-stamp
	debconf-updatepo

	dh_clean

install: build
	dh_testdir
	dh_testroot
	dh_prep
	dh_installdirs

	chmod +x debian/script-*
	debian/script-install-files
	debian/script-setup-nuxeo-conf
	debian/script-add-package-type
	debian/script-remove-mysql-lib
	debian/script-chmod-executables
	debian/script-cleanup-unused

binary-indep: build install
	dh_testdir -i
	dh_testroot -i
	dh_installdocs -i
	dh_installchangelogs -i
	dh_compress -i
	dh_installinit -i
	dh_installdeb -i
	dh_installdebconf -i
	dh_lintian -i
	dh_gencontrol -i
	dh_md5sums -i
	dh_builddeb -i

binary: binary-indep

binary-arch:

.PHONY: build clean binary-indep dinary install

